{% extends 'PrettyAdminBundle:Layout:pretty_admin.html.twig' %}

{% block content %}
<div class="filter">
    Filter <input type ng-model="filter_entity">
</div>
<table>
    <tr>
        <th ng-repeat="field in fields">
            [[ field ]]
        </th>
        <th class="actions">Actions</th>
    </tr>
    <tr ng-repeat="entity in entities | filter:filter_entity">
        <td ng-repeat="field in fields"><a href="[[ entity.edit_route ]]">[[ entity[field] ]]</a></td>
        <td class="actions">
            <ul class="entity_actions_list">
                <li class="entity_action"><span href="[[ entity.delete_route ]]" ng-click="deleteEntity([[ entity.delete_route ]], $index);">Delete</span></li>
            </ul>
        </td>
    </tr>
</table>
{% endblock %}
